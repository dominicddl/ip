<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="700.0" prefWidth="500.0"
            stylesheets="@../css/main.css"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="luffy.MainWindow">
    <children>
        <TextField fx:id="userInput"
                   layoutY="648.0"
                   onAction="#handleUserInput"
                   prefHeight="40.0"
                   prefWidth="324.0"
                   promptText="Type your message here..."
                   AnchorPane.bottomAnchor="12.0"
                   AnchorPane.leftAnchor="16.0"
                   AnchorPane.rightAnchor="96.0" />
        <Button fx:id="sendButton"
                layoutX="396.0"
                layoutY="648.0"
                mnemonicParsing="false"
                onAction="#handleUserInput"
                prefHeight="40.0"
                prefWidth="72.0"
                text="Send"
                AnchorPane.bottomAnchor="12.0"
                AnchorPane.rightAnchor="16.0" />
        <ScrollPane fx:id="scrollPane"
                    fitToWidth="true"
                    hbarPolicy="NEVER"
                    hvalue="1.0"
                    prefHeight="645.0"
                    prefWidth="500.0"
                    vvalue="1.0"
                    AnchorPane.bottomAnchor="64.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.topAnchor="0.0">
            <content>
                <VBox fx:id="dialogContainer"
                      prefHeight="645.0"
                      prefWidth="500.0"
                      spacing="10.0" />
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
